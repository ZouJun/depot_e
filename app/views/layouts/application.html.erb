<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag  'scaffold' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("back.gif") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="colums">
    <div id="side">
      <div id="cart">
        <% if @cart.present? %>
          <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
          <% end %>
        <% end %>
      </div>
      <%= link_to 'Home', store_index_path %><br/>
      <%= link_to 'register', new_user_path %><br/>
      <%= link_to 'login', login_path %><br/>
      <%= link_to 'logout', logout_path, :method => :delete, data: { confirm: 'Are you sure?' } %><br/>

    <% if session[:user_id] %>
        <%= link_to 'Product', products_path %><br/>
        <%= link_to 'Users', users_path %><br/>
        <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>


</body>
</html>
